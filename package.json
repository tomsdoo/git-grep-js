{
  "name": "git-grep-json",
  "version": "0.6.4",
  "description": "A tool for git-grep",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/cjs/index.js"
    }
  },
  "types": "dist/esm/index.d.ts",
  "bin": {
    "grep2json": "dist/cjs/bin/grep2json.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.cjs.json && tsc --project tsconfig.esm.json",
    "format": "npm run format:src && npm run format:test",
    "format:test": "prettier --write __test__/",
    "format:src": "prettier --write src/",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "eslint src/",
    "lint:test": "eslint __test__/",
    "prepare": "husky install",
    "test": "jest"
  },
  "lint-staged": {
    "__test__/**": [
      "eslint",
      "prettier --write"
    ],
    "src/**": [
      "eslint",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomsdoo/git-grep-js.git"
  },
  "keywords": [],
  "author": "tom",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomsdoo/git-grep-js/issues"
  },
  "homepage": "https://github.com/tomsdoo/git-grep-js#readme",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@tomsd/md-book": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "commander": "^10.0.1"
  }
}
